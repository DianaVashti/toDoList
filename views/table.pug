extends layout

block content
  include ./add_form.pug
  h1= name.table_name
  table.table
    for list_item in uncompleted
      tr
        td.done.name
          a(href=`/completed/${list_item.id}/?tableid=${name.table_id}`) complete
        td.name(id=`name${list_item.id}`) #{list_item.item_title}
        td.description(id=`desc${list_item.id}`) #{list_item.item_description}
        td.deletebutton
          a(href=`/delete/${list_item.id}`) delete
    a(href='#', type=button, data-toggle='modal', data-target='#newItem') modalAppear
  h1 Completed
  table.table
    for list_item in completed
      tr
        td.name #{list_item.item_title}
        td.description #{list_item.item_description}
